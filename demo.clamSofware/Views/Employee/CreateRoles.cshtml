@model IEnumerable<FakeData>
@{
    int i = 0;
}
<form enctype="multipart/form-data" asp-controller="Employee" asp-action="CreateRolse" method="post" class="mt-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Full Name</th>
                <th scope="col">Rule</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rules in Model)
            {


                <tr>
                    <td>
                         <input type="checkbox" asp-for="@rules.isChecked" name="[@i].isChecked">
                       @* <input type="checkbox" id="[@i].isChecked" name="[@i].isChecked"
                           value="@Html.DisplayFor(item => rules.Id)" />*@
                    </td>
                    <th scope="row">
                        @Html.DisplayFor(item => rules.Id)
                        <input type="hidden" asp-for="@rules.Id" name="[@i].Id">
                    </th>


                    <td>
                        @Html.DisplayFor(item => @rules.Name)
                        <input type="hidden" asp-for="@rules.Name" name="[@i].Name">
                    </td>

                    <td>
                        @Html.DisplayFor(item => @rules.rule)
                        <input type="hidden" asp-for="@rules.rule" name="[@i].rule">
                    </td>

                    
                </tr>
                i++;
               
            }
        </tbody>
    </table>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>