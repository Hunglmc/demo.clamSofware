@model EmployeesDetailsViewModel
@{

    ViewBag.Title = "Chi tiêt nhân sự";
    var photoPath = "~/images/" + (Model.Employees.PhotoPath??"noimage.png");

}
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.Employees.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                    <h4>EmployeesID : @Model.Employees.EncryptedId</h4>
                    <h4>Full Name : @Model.Employees.Name</h4>
                    <h4>Salary : @Model.Employees.Salary</h4>
                </div>
                <div class="card-footer text-center">
                    <a  asp-action="Index" asp-controller="Employee" class="btn btn-primary">Back</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>



@section Scripts{
    @*<script src="~/js/CustomScript.js"></script>*@
}

